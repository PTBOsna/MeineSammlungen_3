<Window x:Class="MeineSammlungen_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeineSammlungen_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Background="LightSteelBlue">
            <Button Content="Alle Module" Name="btAlleModule" Click="BtnAllesClick" />
            <DataGrid Grid.Row="1" Name="ModulGrid" SelectionChanged="ModulGrid_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Modul" Binding="{Binding Path=Modul}"/>
            </DataGrid.Columns> 
        </DataGrid>
        </StackPanel>
        <DataGrid Grid.Row="2" x:Name="GdGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Objekt" Binding="{Binding Path=Objekt}"/>
                <DataGridTextColumn Header="Detail" Binding="{Binding Path=Detail}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
