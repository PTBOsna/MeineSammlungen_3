<Window x:Class="MeineSammlungen_3.ShowImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeineSammlungen_3"
        mc:Ignorable="d"
       Title="ShowImage" Height="650" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Image x:Name="MyImage" Width="Auto"/>

        <UniformGrid Grid.Row="1" Height="20" Width="75">
            <Button Content="Zurück" Click="Btn_Close_Click"/>
        </UniformGrid>


    </Grid>
</Window>
